<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Override the ActionMode Style -->
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InitialTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/white</item>
    </style>

    <style name="TextView" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_8_6</item>
        <item name="android:paddingLeft">@dimen/dimen_2_5</item>
        <item name="android:paddingRight">@dimen/dimen_2_5</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginFields" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_5</item>
        <item name="android:paddingRight">@dimen/dimen_5</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccountFields" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_accent_button</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/selector_text_primary_button</item>
        <item name="android:background">@drawable/selector_primary_button</item>
    </style>

    <style name="Button.LoginAccent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_login_accent_button</item>
    </style>

    <style name="Button.LoginPrimary">
        <item name="android:textColor">@color/selector_text_primary_button</item>
        <item name="android:background">@drawable/selector_login_primary_button</item>
    </style>

    <style name="Button.Primary.Inverse">
        <item name="android:textColor">@color/selector_text_primary_button_inverse</item>
        <item name="android:background">@drawable/selector_primary_button_inverse</item>
    </style>

    <style name="ItemList">
        <item name="android:layout_height">?attr/listPreferredItemHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">?listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?listPreferredItemPaddingLeft</item>
        <item name="android:background">@drawable/selector_default_item</item>
    </style>

    <style name="LargeItemList" parent="ItemList">
        <item name="android:layout_height">?attr/listPreferredItemHeightLarge</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="horizontalDivider" parent="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="verticalDivider" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="SingleLineItemTextView" parent="TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

</resources>
