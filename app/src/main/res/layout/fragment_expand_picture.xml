<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expand_background_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.account.expanded.ExpandPictureActivity">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="@dimen/dimen_30_10"
        android:layout_height="@dimen/dimen_30_10"
        android:contentDescription="@string/profile_image_content_desc"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:transitionName="@string/transition_photo" />

</RelativeLayout>