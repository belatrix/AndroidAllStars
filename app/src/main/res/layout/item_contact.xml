<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_holder"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    style="@style/LargeItemList">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_photo"
        android:layout_width="@dimen/dimen_10_6"
        android:layout_height="@dimen/dimen_10_6"
        android:contentDescription="@string/profile_image_content_desc"
        android:transitionName="@string/transition_photo"
        tools:src="@drawable/placeholder_user"
        app:civ_border_width="@dimen/dimen_4"
        app:civ_border_color="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin">

        <TextView
            android:id="@+id/contact_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            tools:text="@string/title_full_name" />

        <TextView
            android:id="@+id/contact_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            tools:text="@string/title_level" />

    </LinearLayout>

</LinearLayout>