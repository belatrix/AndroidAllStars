<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transition_splash_background"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/launcherImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/transition_splash_background"
        android:src="@drawable/bx_launcher"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="@dimen/initial_logo"
        android:layout_height="@dimen/initial_logo"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/transition_splash_background"
        android:src="@drawable/bx_logo"/>

</RelativeLayout>