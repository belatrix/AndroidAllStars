<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/ic_event_time"
                android:gravity="center_vertical"

                android:drawablePadding="@dimen/dimen_5"
                tools:text="DateHour" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/ic_event_location"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dimen_5"
                tools:text="Location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3_5"
                    android:fontFamily="serif"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_5"
                    android:fontFamily="serif"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/collaborators"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:layout_marginBottom="@dimen/dimen_2_5"
                    android:visibility="gone"
                    tools:text="# Collaborators" />

                <TextView
                    android:id="@+id/participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:visibility="gone"
                    tools:text="# Participants" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:padding="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_gravity="end"
        android:visibility="gone"
        style="@style/Button.Primary"/>

</LinearLayout>