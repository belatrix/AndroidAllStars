<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.IntermediaryLogoActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="@dimen/initial_logo"
        android:layout_height="@dimen/initial_logo"
        android:layout_centerInParent="true"
        android:src="@drawable/bx_logo"
        android:transitionName="@string/transition_splash_logo"/>

</RelativeLayout>