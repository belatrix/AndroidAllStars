<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/horizontalDivider" />

        <com.belatrixsf.connect.ui.common.views.AccountSelectionView
            android:id="@+id/account_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_text="@string/select_user" />

        <View style="@style/horizontalDivider" />

        <com.belatrixsf.connect.ui.common.views.DataSelectionView
            android:id="@+id/category_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_text="@string/select_action" />

        <View style="@style/horizontalDivider" />

        <com.belatrixsf.connect.ui.common.views.KeywordSelectionView
            android:id="@+id/keyword_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_text="@string/hint_write_tag" />

        <View style="@style/horizontalDivider" />

        <com.belatrixsf.connect.ui.common.views.DataSelectionView
            android:id="@+id/comment_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_text="@string/hint_write_comment" />

        <View style="@style/horizontalDivider" />

    </LinearLayout>

</ScrollView>