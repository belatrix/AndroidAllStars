<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_2_5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="@dimen/dimen_13_10"
                    android:layout_height="@dimen/dimen_13_10"
                    android:transitionName="@string/transition_photo"
                    android:layout_gravity="center_vertical"
                    app:civ_border_width="@dimen/dimen_4"
                    app:civ_border_color="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/title_score"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_32"
                                android:textStyle="bold"
                                tools:text="1000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/title_level"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"/>

                            <TextView
                                android:id="@+id/level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_32"
                                android:textStyle="bold"
                                tools:text="1000"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2_5"
                        android:layout_marginLeft="@dimen/dimen_3_5"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_email"
                            android:drawableLeft="@drawable/ic_email"
                            tools:text="user@email.com"
                            style="@style/AccountFields"/>

                        <TextView
                            android:id="@+id/skype_id"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:drawableLeft="@drawable/ic_skype"
                            tools:text="skypeid"
                            style="@style/AccountFields" />

                        <TextView
                            android:id="@+id/location_name"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:drawableLeft="@drawable/ic_location"
                            tools:text="Location"
                            style="@style/AccountFields" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>

            <FrameLayout
                android:id="@+id/fragment_profile_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"/>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>