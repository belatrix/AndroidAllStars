<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.belatrixsf.connect">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.BelatrixConnectApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.belatrixsf.connect.ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.belatrixsf.connect.ui.signup.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.belatrixsf.connect.ui.resetpassword.ResetPasswordActivity"
            android:label="@string/title_reset_password_activity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.home.MainActivity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.stars.StarsListActivity"
            android:label="@string/title_recommendation_activity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.stars.GiveStarActivity"
            android:label="@string/title_give_star_activity"/>
        <activity
            android:name=".ui.account.AccountActivity"
            android:label="@string/title_account_activity"
            android:parentActivityName="com.belatrixsf.connect.ui.home.MainActivity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.account.expanded.ExpandPictureActivity"
            android:label="@string/title_expand_photo_activity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.contacts.ContactsListActivity"
            android:label="@string/title_contact_activity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.stars.comment.CommentActivity"
            android:label="@string/title_comment_activity"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <activity
            android:name="com.belatrixsf.connect.ui.category.CategoriesActivity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.stars.keyword.KeywordsActivity"
            android:label="@string/title_keywords_activity"/>
        <activity
            android:name="com.belatrixsf.connect.ui.contacts.keyword.ContactsKeywordListActivity"
            android:label="@string/title_contacts_keyword_activity"/>
        <activity android:name="com.belatrixsf.connect.ui.account.edit.EditAccountActivity"
            android:label="@string/title_edit_profile_activity"/>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>

        <activity
            android:name="com.belatrixsf.connect.ui.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabric_io_api_key}"/>

    </application>

</manifest>
